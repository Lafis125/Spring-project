#box-small{
	margin-top: 40px;
	margin-bottom: 40px;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-evenly;
	border: 1px solid black;
	border-radius: 10px;
	box-shadow: 5px 5px 10px 5px;
	min-height: 500px;
	width: 400px;
}
